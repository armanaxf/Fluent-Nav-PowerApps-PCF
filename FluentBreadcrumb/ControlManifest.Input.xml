<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="FluentBreadcrumb" constructor="FluentBreadcrumb" version="0.0.1" display-name-key="FluentBreadcrumb" description-key="Fluent UI v9 Breadcrumb Component for Canvas Apps" control-type="virtual">
    <external-service-usage enabled="false">
    </external-service-usage>
    
    <!-- Dataset for breadcrumb items -->
    <data-set name="items" display-name-key="Items" description-key="Collection of breadcrumb items">
      <property-set name="ItemKey" display-name-key="Item Key" description-key="Unique key for the item" of-type="SingleLine.Text" usage="bound" required="true" />
      <property-set name="ItemName" display-name-key="Item Name" description-key="Display name for the item" of-type="SingleLine.Text" usage="bound" required="true" />
      <property-set name="ItemIcon" display-name-key="Item Icon" description-key="Optional Fluent UI icon name" of-type="SingleLine.Text" usage="bound" required="false" />
    </data-set>
    
    <!-- Input Properties -->
    <property name="Theme" display-name-key="Theme" description-key="Theme of the control" of-type="Enum" usage="input" required="false" default-value="webLight">
       <value name="webLight" display-name-key="Web Light">Web Light</value>
       <value name="webDark" display-name-key="Web Dark">Web Dark</value>
       <value name="teamsLight" display-name-key="Teams Light">Teams Light</value>
       <value name="teamsDark" display-name-key="Teams Dark">Teams Dark</value>
    </property>

    <!-- Output Properties -->
    <property name="SelectedKey" display-name-key="Selected Key" description-key="The key of the clicked breadcrumb item" of-type="SingleLine.Text" usage="output" />
    
    <resources>
      <code path="index.ts" order="1"/>
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
    </resources>
  </control>
</manifest>
