<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="FluentCard" constructor="FluentCard" version="1.4.2" display-name-key="FluentCard" description-key="Fluent UI v9 Card Component for Canvas Apps" control-type="virtual">
    <external-service-usage enabled="false">
    </external-service-usage>
    
    <!-- Input Properties -->
    <property name="Title" display-name-key="Title" description-key="Card title text" of-type="SingleLine.Text" usage="input" required="false" default-value="Card Title" />
    <property name="Subtitle" display-name-key="Subtitle" description-key="Card subtitle or description" of-type="SingleLine.Text" usage="input" required="false" />
    <property name="BodyContent" display-name-key="Body Content" description-key="Optional body text below the header" of-type="SingleLine.Text" usage="input" required="false" />
    <property name="Image" display-name-key="Image" description-key="Media reference, data URI, or URL for the card image" of-type="SingleLine.Text" usage="input" required="false" />
    
    <property name="Size" display-name-key="Size" description-key="Card size - affects padding and spacing" of-type="Enum" usage="input" required="false" default-value="medium">
      <value name="small" display-name-key="Small">Small</value>
      <value name="medium" display-name-key="Medium">Medium</value>
      <value name="large" display-name-key="Large">Large</value>
    </property>
    
    <property name="Orientation" display-name-key="Orientation" description-key="Card layout orientation" of-type="Enum" usage="input" required="false" default-value="vertical">
      <value name="vertical" display-name-key="Vertical">Vertical</value>
      <value name="horizontal" display-name-key="Horizontal">Horizontal</value>
    </property>
    
    <property name="Appearance" display-name-key="Appearance" description-key="Card visual style" of-type="Enum" usage="input" required="false" default-value="filled">
      <value name="filled" display-name-key="Filled">Filled</value>
      <value name="filled-alternative" display-name-key="Filled Alternative">Filled Alternative</value>
      <value name="outline" display-name-key="Outline">Outline</value>
      <value name="subtle" display-name-key="Subtle">Subtle</value>
    </property>
    
    <property name="Selectable" display-name-key="Selectable" description-key="Whether the card can be selected" of-type="TwoOptions" usage="input" required="false" />
    <property name="FloatingAction" display-name-key="Floating Action" description-key="Show checkbox indicator for selectable cards" of-type="TwoOptions" usage="input" required="false" />
    
    <property name="ActionButtonText" display-name-key="Action Button Text" description-key="Text for action button in footer" of-type="SingleLine.Text" usage="input" required="false" />
    
    <!-- Output Properties -->
    <property name="Selected" display-name-key="Selected" description-key="Whether the card is currently selected" of-type="TwoOptions" usage="output" />
    
    <!-- Events -->
    <event name="OnCardSelect" display-name-key="On Card Select" description-key="Fires when the card is clicked" />
    <event name="OnActionSelect" display-name-key="On Action Select" description-key="Fires when the action button is clicked" />
    
    <resources>
      <code path="index.ts" order="1"/>
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
    </resources>
  </control>
</manifest>
