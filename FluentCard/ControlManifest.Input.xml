<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="FluentCard" constructor="FluentCard" version="0.0.1" display-name-key="FluentCard" description-key="Fluent UI v9 Card Component for Canvas Apps" control-type="virtual">
    <external-service-usage enabled="false">
    </external-service-usage>
    
    <!-- Input Properties -->
    <property name="Title" display-name-key="Title" description-key="Card title text" of-type="SingleLine.Text" usage="input" required="false" default-value="Card Title" />
    <property name="Subtitle" display-name-key="Subtitle" description-key="Card subtitle or description" of-type="SingleLine.Text" usage="input" required="false" />
    <property name="ImageUrl" display-name-key="Image URL" description-key="URL for the card header image" of-type="SingleLine.URL" usage="input" required="false" />
    <property name="Size" display-name-key="Size" description-key="Card size" of-type="Enum" usage="input" required="false" default-value="medium">
      <value name="small" display-name-key="Small">Small</value>
      <value name="medium" display-name-key="Medium">Medium</value>
      <value name="large" display-name-key="Large">Large</value>
    </property>
    <property name="Orientation" display-name-key="Orientation" description-key="Card layout orientation" of-type="Enum" usage="input" required="false" default-value="vertical">
      <value name="vertical" display-name-key="Vertical">Vertical</value>
      <value name="horizontal" display-name-key="Horizontal">Horizontal</value>
    </property>
    <property name="Selectable" display-name-key="Selectable" description-key="Whether the card can be selected" of-type="TwoOptions" usage="input" required="false" />
    
    <!-- Output Properties -->
    <property name="Selected" display-name-key="Selected" description-key="Whether the card is currently selected" of-type="TwoOptions" usage="output" />
    <property name="Clicked" display-name-key="Clicked" description-key="Triggers when the card is clicked (toggles true/false)" of-type="TwoOptions" usage="output" />
    
    <resources>
      <code path="index.ts" order="1"/>
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
    </resources>
  </control>
</manifest>
